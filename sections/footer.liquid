                  <i class="{{ block.settings.footer_column_4_icon_5 }}"></i>
                  <span>{{ block.settings.footer_column_4_icon_title_5 }}</span>
                </a>
                {% endif %}
              </div>
            </div>
          </div>

          {% when 'customtext' %}
          <div class="{{class_width}} col-sm-6 col-xs-12">
            {% if block.settings.footer_customtext != blank %}
            <div class="text-footerbt {{ block.settings.customtext_position }}">
              {% if settings.enable_multilang %}
              <span class="lang1">{{ block.settings.footer_customtext | split: '|' | first }}</span>
