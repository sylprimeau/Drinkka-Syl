<footer class="footer-container footer-layout-1  {% if  section.settings.enable_footer_fullwidth  %}full-width {%endif %}" style="padding:{{ section.settings.layout_footer }}">
  {% unless section.settings.enable_footer_fullwidth %}
  <div class="container">
    {% endunless  %}
    <div class="footer-top"> 
      <div class="row">
        <div class="footer-top-col-group">
          {% for block in section.blocks %}
          {%- case block.settings.width -%}
          {% when '16%' %}
          {%- assign class_width = 'col-md-2' -%}
          {% when '25%' %}
          {%- assign class_width = 'col-md-3' -%}
          {% when '34%' %}
          {%- assign class_width = 'col-md-4' -%}
          {% when '42%' %}
          {%- assign class_width = 'col-md-5' -%}
          {% when '50%' %}
          {%- assign class_width = 'col-md-6' -%}
          {% when '58%' %}
          {%- assign class_width = 'col-md-7' -%}
          {% when '66%' %}
          {%- assign class_width = 'col-md-8' -%}
          {% when '75%' %}
          {%- assign class_width = 'col-md-9' -%}
          {% when '84%' %}
          {%- assign class_width = 'col-md-10' -%}
          {% when '100%' %}
          {%- assign class_width = 'col-md-12' -%}
          {%- endcase -%}
          {%- case block.type -%}
          {% when 'menu' %}
          <div class="{{class_width}} col-sm-6 col-xs-12 {{ block.settings.menu_position }} {{ block.settings.menu_layout }}">
            {% if block.settings.footer_heading != blank %}
            <h3 class="module-title">
              {% if settings.enable_multilang %}
              <span class="lang1">{{ block.settings.footer_heading | split: '|' | first }}</span>
              <span class="lang2">{{ block.settings.footer_heading | split: '|' | last }}</span>
              {% else %}
              {{ block.settings.footer_heading | split: '|' | first }}
              {% endif %}
            </h3>
            {% endif %}
            <ul class="content">

              {%- assign footercol1 = block.settings.footercol1 -%}
              {% for link in linklists[footercol1].links %}

              <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
          {% when 'newsletter' %}
          <div class="{{class_width}} col-sm-6 col-xs-12">
            <div class="home-newsletter {{ block.settings.newsletter_position }}">
              <div class="newsletter">
                {% if block.settings.home_newsletter_title != blank %}
                <div class="title_newsletter">
                  {% if settings.enable_multilang %}
                  <span class="lang1">{{ block.settings.home_newsletter_title | split: '|' | first }}</span>
                  <span class="lang2">{{ block.settings.home_newsletter_title | split: '|' | last }}</span>
                  {% else %}
                  {{ block.settings.home_newsletter_title | split: '|' | first }}
                  {% endif %}
                </div>
                {% endif %}
                {% if block.settings.home_newsletter_subtitle != blank %}
                <div class="subtitle_newsletter">
                  {% if settings.enable_multilang %}
                  <span class="lang1">{{ block.settings.home_newsletter_subtitle | split: '|' | first }}</span>
                  <span class="lang2">{{ block.settings.home_newsletter_subtitle | split: '|' | last }}</span>
                  {% else %}
                  {{ block.settings.home_newsletter_subtitle | split: '|' | first }}
                  {% endif %}
                </div>
                {% endif %}
                <div class="content">
                  <form action="{{ block.settings.mailing_list_form_action }}" method="post" name="mc-embedded-subscribe-form" target="_blank" class="input-group">
                    <div class="input-group newsletter_form_content">
                      <input  class="input__field input-group-field" type="email" value="" name="EMAIL" aria-label="Email Address" placeholder="{{ block.settings.footer_newsletter_content }}">
                      <span class="input-group-btn">
                        <input type="submit" class="btn harman_btn4" value="{{ block.settings.footer_newsletter_go }}" name="subscribe">
                      </span>
                    </div>
                  </form>
                </div>
                {% if block.settings.home_newsletter_subtitle_2 != blank %}
                <div class="subtitle2_newsletter">
                  {% if settings.enable_multilang %}
                  <span class="lang1">{{ block.settings.home_newsletter_subtitle_2 | split: '|' | first }}</span>
                  <span class="lang2">{{ block.settings.home_newsletter_subtitle_2 | split: '|' | last }}</span>
                  {% else %}
                  {{ block.settings.home_newsletter_subtitle_2 | split: '|' | first }}
                  {% endif %}
                </div>
                {% endif %}
              </div>
            </div>
          </div>
          {% when 'iconsocial' %}
          <div class="{{class_width}} col-sm-6 col-xs-12 {{ block.settings.iconsocial_position }} {{ block.settings.iconsocial_layout }}">
            {% if  block.settings.footer_column_3_title != blank %}
            <h3 class="module-title">{{ block.settings.footer_column_3_title }}</h3>
            {% endif %}
            <div class="content custom-fotter-top">
              <div class="footer-icon-share">
                {% if block.settings.footer_column_4_icon_1 != blank %}
                <a href="{{ block.settings.footer_column_4_icon_link_1 }}">
                  <i class="{{ block.settings.footer_column_4_icon_1 }}"></i>
                  <span>{{ block.settings.footer_column_4_icon_title_1 }}</span>
                </a>
                {% endif %}
