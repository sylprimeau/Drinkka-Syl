{% comment %}
This page represents the /collections and /products pages.
It is an optional, but highly recommended, template for your theme.

More info:
- http://docs.shopify.com/manual/configuration/store-customization/taking-control-of-collections-listing
{% endcomment %}


{% if settings.enable_block_home_category %}	
<div class="list-category">
  {% for i in (1..4) %}
  {% capture home_collection_title %}home_collection_title_{{ i }}{% endcapture %}
  {% capture home_collection_img %}bg_home_collection_{{ i }}.jpg{% endcapture %}
  {% capture home_collection_link %}home_collection_{{ i }}{% endcapture %}
  {% capture home_collection_textlink %}home_collection_textlink_{{ i }}{% endcapture %}
  <div class="col-xs-6 col-md-3 col-sm-6">
    <div class="home-collection-item collection-item-{{ i }}">
      <a href="/collections/{{ settings[home_collection_link] }}">
        <img class="b-lazy" alt="" src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="{{ home_collection_img | asset_url }}">
      </a>
      <a href="/collections/{{ settings[home_collection_link] }}" class="view">&nbsp;</a>
      <div class="home-collection-title-wrapper">
        <div class="home-collection-title">
          <h3 class="h5">
            <a href="/collections/{{ settings[home_collection_link] }}">{{ settings[home_collection_title] }}</a>
          </h3>
        </div>
      </div>
    </div>
  </div>
  {% endfor %}
</div>
{% endif %}

