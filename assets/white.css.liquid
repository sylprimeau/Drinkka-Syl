@media (max-width: 767px) {
  .flex-control-paging li a {background: #cccccc !important;}
  .flex-control-paging li a.flex-active,.flex-control-paging li a:hover {background: {{ settings.body_link_color_hover }} !important;}
}
@media (max-width: 1024px) {
  .mobile-modern #search-top input[type=text], .mobile-modern #search-top input[type=text]:focus {
    border: 1px solid #2b2b2b!important;
  }
  .mobile-modern #search-top button:after {
    color: #333333 !important;
  }
}
