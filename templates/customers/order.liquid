{% comment %}

  This template will be automatically generated for you if the file doesn't exist,
  but where's the fun in having no control? Define your layout below.

  The 'layout settings.customer_layout' line is inserted at the top of every customer account template.
  Your theme's settings determine to use the 'default' or 'theme' customer templates.
  More info:
    - http://www.tetchi.ca/shopify-theme-from-scratch-part-11/

  Template note:
    - All IDs on this template are required to make the form(s) submit properly

{% endcomment %}

{% layout settings.customer_layout %}

<header class="page-header">
  <h1 {% if settings.enable_multilang %}data-translate="customers.order.title"{%endif%}>{{ 'customers.order.title' | t }}</h1>
</header>

<p><a href="/account" {% if settings.enable_multilang %}data-translate="customers.order.return_account"{%endif%}>{{ 'customers.order.return_account' | t }}</a></p>

<div class="grid">

  <div class="grid-item two-thirds medium-down--one-whole">
    <header class="page-header">
      <h4 {% if settings.enable_multilang %}data-translate="customers.order.text_order"{%endif%}>{{ 'customers.order.text_order' | t }} {{ order.name }}</h4>
    </header>

    <p {% if settings.enable_multilang %}data-translate="customers.order.placed_on"{%endif%}>{{ 'customers.order.placed_on' | t }} <strong>{{ order.created_at | date: "%B %d, %Y %I:%M%p" }}</strong></p>

    {% if order.cancelled %}
    <div class="errors">
      <h5 {% if settings.enable_multilang %}data-translate="customers.order.order_cancelled"{%endif%}>{{ 'customers.order.order_cancelled' | t }} {{ order.cancelled_at | date: "%B %d, %Y %I:%M%p" }}</h5>
      <p {% if settings.enable_multilang %}data-translate="customers.order.reason"{%endif%}>{{ 'customers.order.reason' | t }}: {{ order.cancel_reason }}</p>
    </div>
    {% endif %}

    <table class="full">
      <thead>
        <tr>
          <th {% if settings.enable_multilang %}data-translate="customers.order.title_product"{%endif%}>{{ 'customers.order.title_product' | t }}</th>
          <th {% if settings.enable_multilang %}data-translate="customers.order.title_sku"{%endif%}>{{ 'customers.order.title_sku' | t }}</th>
          <th {% if settings.enable_multilang %}data-translate="customers.order.title_price"{%endif%}>{{ 'customers.order.title_price' | t }}</th>
          <th class="text-center" {% if settings.enable_multilang %}data-translate="customers.order.title_quantity"{%endif%}>{{ 'customers.order.title_quantity' | t }}</th>
          <th class="text-right" {% if settings.enable_multilang %}data-translate="customers.order.title_total"{%endif%}>{{ 'customers.order.title_total' | t }}</th>
        </tr>
      </thead>
      <tbody>
        {% for line_item in order.line_items %}
        <tr id="{{ line_item.id }}">
          <td>
            {{ line_item.title | link_to: line_item.product.url }}
            {% if line_item.fulfillment %}
              <div class="note">
                Fulfilled {{ line_item.fulfillment.created_at | date: "%b %d" }}
                {% if line_item.fulfillment.tracking_number %}
                  <a href="{{ line_item.fulfillment.tracking_url }}">{{ line_item.fulfillment.tracking_company }} #{{ line_item.fulfillment.tracking_number}}</a>
                {% endif %}
              </div>
            {% endif %}
          </td>
          <td>{{ line_item.sku }}</td>
          <td>{{ line_item.price | money }}</td>
          <td class="text-center">{{ line_item.quantity }}</td>
          <td class="text-right">{{ line_item.quantity | times: line_item.price | money }}</td>
        </tr>
        {% endfor %}
      </tbody>
      <tfoot>
        <tr>
          <td colspan="4" {% if settings.enable_multilang %}data-translate="customers.order.subtotal"{%endif%}>{{ 'customers.order.subtotal' | t }}:</td>
          <td class="text-right">{{ order.subtotal_price | money }}</td>
        </tr>

        {% for discount in order.discounts %}
          <tr class="order_summary discount">
            <td colspan="4" {% if settings.enable_multilang %}data-translate="customers.order.discount"{%endif%}>{{ discount.code }} {{ 'customers.order.discount' | t }}:</td>
            <td class="text-right">{{ discount.savings | money }}</td>
          </tr>
        {% endfor %}

        {% for shipping_method in order.shipping_methods %}
        <tr>
          <td colspan="4">Shipping ({{ shipping_method.title }}):</td>
          <td class="text-right">{{ shipping_method.price | money }}</td>
        </tr>
        {% endfor %}

        {% for tax_line in order.tax_lines %}
          <tr>
            <td colspan="4">Tax ({{ tax_line.title }} {{ tax_line.rate | times: 100 }}%):</td>
            <td class="text-right">{{ tax_line.price | money }}</td>
          </tr>
        {% endfor %}

        <tr>
          <td colspan="4"><strong {% if settings.enable_multilang %}data-translate="customers.order.title_total"{%endif%}>{{ 'customers.order.title_total' | t }}:</strong></td>
          <td class="text-right"><strong>{{ order.total_price | money }} {{ order.currency }}</strong></td>
        </tr>
      </tfoot>
    </table>



  </div>

  <div class="grid-item one-third medium-down--one-whole">

    <div class="page-header">
      <h4 {% if settings.enable_multilang %}data-translate="customers.order.title_billing_information"{%endif%}>{{ 'customers.order.title_billing_information' | t }}</h4>
    </div>

    <p><strong {% if settings.enable_multilang %}data-translate="customers.order.payment_status"{%endif%}>{{ 'customers.order.payment_status' | t }}:</strong> {{ order.financial_status }}</p>

    <h5>{{ order.billing_address.name }}</h5>
    <p>
      {% if order.billing_address.company != '' %}
        {{ order.billing_address.company }}<br>
      {% endif %}
      {{ order.billing_address.street }}<br>
      {{ order.billing_address.city }}<br>
      {% if order.billing_address.province != '' %}
        {{ order.billing_address.province }}<br>
      {% endif %}
      {{ order.billing_address.zip | upcase }}<br>
      {{ order.billing_address.country }}<br>
      {{ order.billing_address.phone }}
    </p>

    <div class="page-header">
      <h4 {% if settings.enable_multilang %}data-translate="customers.order.title_shipping_information"{%endif%}>{{ 'customers.order.title_shipping_information' | t }}</h4>
    </div>

    <p><strong {% if settings.enable_multilang %}data-translate="customers.order.fulfillment_status"{%endif%}>{{ 'customers.order.fulfillment_status' | t }}:</strong> {{ order.fulfillment_status }}</p>

    <h5>{{ order.shipping_address.name }}</h5>
    <p>
      {% if order.shipping_address.company != '' %}
        {{ order.shipping_address.company }}<br>
      {% endif %}
      {{ order.shipping_address.street }}<br>
      {{ order.shipping_address.city }}<br>
      {% if order.shipping_address.province != '' %}
        {{ order.shipping_address.province }}<br>
      {% endif %}
      {{ order.shipping_address.zip | upcase }}<br>
      {{ order.shipping_address.country }}<br>
      {{ order.shipping_address.phone }}
    </p>

  </div>

</div>